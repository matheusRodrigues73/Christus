{
  "name": "christus",
  "version": "1.0.0",
  "description": "Plataform to unify the body of Christus",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migrations:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "test": "npm run services:up && concurrently --names next,jest --hide next -k --success command-jest \"next\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watch --runInBand",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations up --envPath .env.development",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "author": "matheusRodrigues73",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.5",
    "async-retry": "^1.3.3",
    "autoprefixer": "^10.4.21",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "postcss": "^8.4.41",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.10"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "dotenv": "^16.4.4",
    "jest": "^29.6.2",
    "prettier": "^3.5.3"
  }
}
