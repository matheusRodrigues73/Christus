{
  "name": "christus",
  "version": "1.0.0",
  "description": "Plataform to unify the body of Christus",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && npx next",
    "test": "npm run services:up && concurrently --names next,jest --hide next -k --success command-jest \"next\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watch --runInBand",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "lint:secretlint:check": "secretlint \"**/*\"",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations up --envPath .env.development",
    "commit": "cz",
    "prepare": "husky"
  },
  "author": "matheusRodrigues73",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "4.1.5",
    "async-retry": "1.3.3",
    "autoprefixer": "10.4.21",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.5",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "postcss": "8.4.41",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "3.4.10"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "20.0.0",
    "@secretlint/secretlint-rule-preset-recommend": "11.2.5",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "secretlint": "11.2.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
